{{input type="text" placeholder="Write a comment" value=newComment}}
{{!-- {{model}} --}}
<button {{action 'createComment' model.todo }} disabled={{enableCommentSubmit}}>Comment</button>
{{#each model.comments as |comment|}}
<li>
  {{comment.body}}</li>
<button {{action 'removeComment' comment}}>Remove</button>
{{else}}None Found
{{/each}}
{{outlet}}
